<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ase.attendancehashchain.ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "/>

    <TextView
        android:id="@+id/email_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/email_label" />

    <TextView
        android:id="@+id/week_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_label"
        android:text="Current week: " />

    <TextView
        android:id="@+id/week_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/week_label"
        android:layout_below="@id/email_content" />

    <EditText
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_label"
        android:hint="Enter group number" />

    <Button
        android:id="@+id/generateCode"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/group"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="Generate Attendance Code" />

</RelativeLayout>